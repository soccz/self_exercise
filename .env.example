# Set to true to use mock data instead of Supabase.
NEXT_PUBLIC_USE_MOCK=false

# Supabase (required only when NEXT_PUBLIC_USE_MOCK=false)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase (server-only; recommended for Telegram webhook writes)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=

# Telegram (Vercel / Next API Route)
TELEGRAM_BOT_TOKEN=
# Optional but strongly recommended: verify incoming webhook requests
TELEGRAM_WEBHOOK_SECRET=
# Used in Telegram inline button
APP_URL=

# Optional (recommended for public deploy): lock write endpoints (PATCH/POST/DELETE) behind a simple secret.
# When set, you must "unlock" once per browser via /api/session (or the lock button on /profile).
APP_SECRET=

# Optional: Telegram reminder (requires supabase/telegram_reminder_patch.sql)
# The cron endpoint /api/cron/remind requires APP_SECRET via x-app-secret header.
